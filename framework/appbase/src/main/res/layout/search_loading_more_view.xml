<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="60dp"
    android:layout_gravity="center">

    <com.fw.zycoder.appbase.view.ProgressWheelLoadingView
        android:id="@+id/progress_loading_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        auto:matProg_barColor="@android:color/holo_blue_dark"
        auto:matProg_progressIndeterminate="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@string/loading_more_tips"
        android:textSize="18sp"
        android:layout_gravity="center_vertical" />

</LinearLayout>