<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 黑投影文字 -->
    <style name="BlackShadowTextStyle">
        <item name="android:shadowColor">@color/upgrade_gray</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <!-- 白投影文字 -->
    <style name="WhiteShadowTextStyle">
        <item name="android:shadowColor">@android:color/white</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">1</item>
    </style>


    <style name="Animation.Activity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_slide_in_from_right</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_slide_out_to_right</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_slide_out_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_slide_in_from_left</item>
    </style>

    <style name="Animation.Activity.SlidingBack" parent="@style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_slide_in_from_right</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_slide_out_to_right</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
    </style>
</resources>
