<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="true">
        <shape>
            <solid android:color="@color/cell_half_transparent" />
            <stroke android:width="1dp" android:color="@color/notice" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item android:state_checked="false" android:state_pressed="false" android:state_selected="false">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke android:width="1dp" android:color="@color/notice" />
            <corners android:radius="4dp" />
        </shape>
    </item>
</selector>