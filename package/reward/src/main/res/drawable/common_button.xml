<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="true">
        <shape>
            <solid android:color="#60FFD300" />
            <stroke android:width="0dp" android:color="@color/new_gray_divider" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item android:state_checked="false" android:state_pressed="false" android:state_selected="false">
        <shape>
            <solid android:color="@color/app_main_title_bar_color" />
            <stroke android:width="0dp" android:color="@color/new_gray_divider" />
            <corners android:radius="4dp" />
        </shape>
    </item>
</selector>