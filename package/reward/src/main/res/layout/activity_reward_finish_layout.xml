<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_main_bg_color"
    android:orientation="vertical">

    <com.hongyu.reward.widget.OverScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View style="@style/divider_theme_gray" />

            <include
                android:id="@+id/person_detail_layout"
                layout="@layout/person_detail_layout" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/app_main_bg_color" />

            <include
                android:id="@+id/order_info_layout"
                layout="@layout/item_listview_order" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="26dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/star1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:contentDescription="@null"
                        android:src="@mipmap/icon_star_orange_h" />

                    <ImageView
                        android:id="@+id/star2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:clickable="true"
                        android:contentDescription="@null"
                        android:src="@mipmap/icon_star_orange_h" />

                    <ImageView
                        android:id="@+id/star3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:clickable="true"
                        android:contentDescription="@null"
                        android:src="@mipmap/icon_star_orange_h" />

                    <ImageView
                        android:id="@+id/star4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:clickable="true"
                        android:contentDescription="@null"
                        android:src="@mipmap/icon_star_orange_h" />

                    <ImageView
                        android:id="@+id/star5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:clickable="true"
                        android:contentDescription="@null"
                        android:src="@mipmap/icon_star_orange_h" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textColor="@color/text_orange"
                        android:textSize="@dimen/text_h0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 星评价"
                        android:textColor="@color/text_orange"
                        android:textSize="@dimen/text_h3" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        style="@style/divider_theme_gray"
                        android:layout_width="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:text="来描述下服务吧"
                        android:textColor="@color/text_gray_more"
                        android:textSize="@dimen/text_h3" />

                    <View
                        style="@style/divider_theme_gray"
                        android:layout_width="0dp"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <com.hongyu.reward.widget.CommentTextView
                        android:id="@+id/tag1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:tag="速度快" />

                    <com.hongyu.reward.widget.CommentTextView
                        android:id="@+id/tag2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_weight="1"
                        android:tag="守时" />

                    <com.hongyu.reward.widget.CommentTextView
                        android:id="@+id/tag3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_weight="1"
                        android:tag="人好" />

                    <com.hongyu.reward.widget.CommentTextView
                        android:id="@+id/tag4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_weight="1"
                        android:tag="美女" />
                </LinearLayout>

                <EditText
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/cell_round_gray_edit_1dp_stroke"
                    android:gravity="top"
                    android:hint="点击输入"
                    android:maxEms="3"
                    android:maxLines="4"
                    android:padding="8dp"
                    android:textSize="15sp"
                    android:textColorHint="@color/light_gray_text" />
            </LinearLayout>

            <Button
                android:id="@+id/evaluate"
                style="@style/App.Comm.Button"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:text="评价并分享" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@mipmap/icon_notice"
                android:drawablePadding="2dp"
                android:text="为保证您的个人信息不被泄露,所有评价皆为匿名"
                android:textColor="@color/text_gray_more"
                android:textSize="@dimen/text_h4" />
        </LinearLayout>
    </com.hongyu.reward.widget.OverScrollView>
</LinearLayout>
