<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_main_bg_color"
    android:orientation="vertical">

    <View style="@style/divider_theme_gray" />

    <com.hongyu.reward.widget.OverScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="10dp">

                <com.hongyu.reward.widget.NetImageView
                    android:id="@+id/image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:contentDescription="@string/image_desc"
                    android:scaleType="fitXY"
                    android:src="@mipmap/defalut_image" />

                <TextView
                    android:id="@+id/shop_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_h1"
                    tools:text="味千拉面" />
            </LinearLayout>

            <View style="@style/divider_theme_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/reward_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="悬赏类型"
                    android:textColor="@color/text_gray_dark"
                    android:textSize="@dimen/text_h1" />

                <TextView
                    android:id="@+id/order_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="即时悬赏（10分钟）"
                    android:textColor="@color/text_gray_more"
                    android:textSize="@dimen/text_h1" />
            </LinearLayout>

            <View style="@style/divider_theme_gray" />

            <View
                style="@style/divider_theme_gray"
                android:layout_marginTop="12dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/cell_round_click_no"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/dinner_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@android:color/transparent"
                    android:singleLine="true"
                    android:text="就餐人数"
                    android:textColor="@color/text_gray_dark"
                    android:textSize="@dimen/text_h2" />

                <TextView
                    android:id="@+id/dinner_count_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@id/dinner_count"
                    android:background="@android:color/transparent"
                    android:singleLine="true"
                    android:textColor="@color/text_gray_more"
                    android:textSize="@dimen/text_h2"
                    tools:text="2人" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/cell_round_click_no"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/reward_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@android:color/transparent"
                    android:singleLine="true"
                    android:text="悬赏金额"
                    android:textColor="@color/text_gray_dark"
                    android:textSize="@dimen/text_h2" />

                <TextView
                    android:id="@+id/reward_money_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@id/reward_money"
                    android:background="@android:color/transparent"
                    android:singleLine="true"
                    android:textColor="@color/text_gray_more"
                    android:textSize="@dimen/text_h2"
                    tools:text="20.0元" />

            </RelativeLayout>

            <View style="@style/divider_theme_gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_margin="10dp"
                android:background="@drawable/cell_white_round_all">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="正在寻找接单人"
                    android:textColor="@color/text_gray_more"
                    android:textSize="@dimen/text_h2" />

                <TextView
                    android:id="@+id/time_count_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="10:00"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="60sp" />

                <com.hongyu.reward.widget.SpringProgressView
                    android:id="@+id/progress_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@mipmap/icon_notice"
                android:drawablePadding="3dp"
                android:text="倒计时结束后无人接单，该订单将被取消，您可以提高赏金，从而增加被选中几率"
                android:textColor="@color/text_gray_light"
                android:textSize="@dimen/text_h2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="28dp"
                android:orientation="horizontal"
                android:paddingBottom="10dp">

                <Button
                    android:id="@+id/cancel"
                    style="@style/App.Comm.Button"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/tag_white_round_all"
                    android:text="取消"
                    android:textColor="@color/app_main_title_text_color" />

                <Button
                    android:id="@+id/add_price"
                    style="@style/App.Comm.Button"
                    android:layout_width="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="追加赏金" />
            </LinearLayout>
        </LinearLayout>
    </com.hongyu.reward.widget.OverScrollView>
</LinearLayout>
