<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:paddingLeft="100dp">

    <com.hongyu.reward.widget.ProgressWheelLoadingView
        android:id="@+id/progress_loading_view"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        auto:matProg_barColor="@android:color/holo_orange_dark"
        auto:matProg_progressIndeterminate="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/progress_loading_view"
        android:text="@string/loading_more_tips"
        android:textSize="18sp" />

</RelativeLayout>