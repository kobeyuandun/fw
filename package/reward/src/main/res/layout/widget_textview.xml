<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/cell_round_click_no"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <RelativeLayout
        android:id="@+id/edit_img_left_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="1dp">

        <ImageView
            android:id="@+id/edit_img_left"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@mipmap/home_icon_reward_publish" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/edit_img_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/comm_icon_go" />

    <TextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/edit_img_left_view"
        android:background="@android:color/transparent"
        android:singleLine="true"
        android:textColor="@color/text_gray_dark"
        tools:text="textview"
        android:textSize="@dimen/text_h2" />

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/text_view"
        android:background="@android:color/transparent"
        android:singleLine="true"
        tools:text="info"
        android:textColor="@color/text_gray_more"
        android:textSize="@dimen/text_h2"
        android:visibility="gone" />

    <TextView
        android:id="@+id/right_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/edit_img_right"
        android:background="@android:color/transparent"
        android:maxLines="1"
        android:ellipsize="end"
        android:maxWidth="200dp"
        android:layout_marginRight="10dp"
        tools:text="right_text"
        android:textColor="@color/text_gray_more"
        android:textSize="@dimen/text_h2" />

</RelativeLayout>